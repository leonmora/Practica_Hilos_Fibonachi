<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText

            android:id="@+id/Numero"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="5.26"
            android:inputType="numberDecimal"
            android:text="5" >

            <requestFocus />
        </EditText>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="calcularOperacion"
            android:text="Calcular factorial" />

        <Button
            android:text="Calcular Fibonacci"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CalcularFibonacci"
            android:onClick="calcularOperacion2"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView

        android:id="@+id/Imprimir"
        android:layout_width="match_parent"
        android:layout_height="368dp"
        android:text=" "
        android:textAppearance="?android:attr/textAppearanceMedium"/>

</LinearLayout>

